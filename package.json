{
  "name": "pandoc-chartjs-filter",
  "version": "1.2.1",
  "description": "A Pandoc filter that generates Chart.js charts and embeds them as images",
  "main": "src/pandoc-chartjs-filter.ts",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node src/main.ts",
    "build": "tsc --build",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "tslint -p tsconfig.json -c tslintconfig.json"
  },
  "bin": {
    "pandoc-chartjs-filter": "bin/pandoc-chartjs-filter.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fkurz/pandoc-chartjs-filter.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org/"
  },
  "keywords": [
    "Pandoc",
    "Chart.js",
    "filter",
    "chart",
    "image"
  ],
  "author": "Friedrich Kurz <friedrich.kurz@live.com> (https://github.com/fkurz/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fkurz/pandoc-chartjs-filter/issues"
  },
  "homepage": "https://github.com/fkurz/pandoc-chartjs-filter#readme",
  "devDependencies": {
    "@types/node": "^15.14.2",
    "@types/uuid": "^8.3.1",
    "prettier": "^1.7.4",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "chart.js": "^2.9.4",
    "chartjs-node-canvas": "^3.2.0",
    "pandoc-filter": "^2.0.2",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  }
}
